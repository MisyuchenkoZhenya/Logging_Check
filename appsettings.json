{
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": "Debug",
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "===> {Timestamp:HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/log-.txt",
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message} {NewLine} {Exception} >>> {Properties} {NewLine}",
                    "fileSizeLimitBytes": 51200,
                    "rollOnFileSizeLimit": true,
                    "rollingInterval": "Day"
                }
            }
        ],
        "Filter": [
            {
                "Name": "ByIncludingOnly",
                "Args": {
                    "expression": "RequestPath like '%/Home/%' or @Level = 'Information'"
                }
            }
        ]
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "AllowedHosts": "*"
}
